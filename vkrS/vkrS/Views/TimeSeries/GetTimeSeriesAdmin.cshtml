
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
@{
    ViewBag.Title = "GetTimeSeriesAdmin";
}
<h2 class="h3">Временные ряды</h2>
<div class="table-responsive" id="">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество элементов</th>
                <th>Описание</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in ViewBag.TimeSeries)
            {
                <tr>
                    <th>@t.Title</th>
                    <th>@t.AmountOfElements</th>
                    <th>@t.Description</th>
                    <th>@Html.ActionLink("Посмотреть", "VisualTimeSeries", "TimeSeries", new { id = t.TimeSeriesId }, new { area = "", @class = "btn-default" })</th>
                </tr>
            }
        </tbody>
    </table>
</div>

@using (Html.BeginForm("AddTimeSeries", "TimeSeries", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<h2 class="h3">Добавление ряда</h2>
    <div class="row">
        <div class="col-sm-10">
                <input type="file" id="fileInput" name="fileInput" value="Добавить файл" />
            <input type="text" id="title" name="title" class="form-control" placeholder="Название" style="margin-top:0.5rem" />
            <textarea type="text" id="description" name="description" class="form-control" placeholder="Описание" rows="3" style="resize:none;margin-top:0.5rem"></textarea>
            <input type="submit" value="Загрузить" class="btn btn-sm btn-primary" style="margin-top:0.5rem" onclick="AddTS()" />
        </div>
    </div>

}


